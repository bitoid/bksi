{#
/**
 * @file
 * Theme override for an 'input' #type form element.
 *
 * Available variables:
 * - attributes: A list of HTML attributes for the input element.
 * - children: Optional additional rendered elements.
 *
 * @see template_preprocess_input()
 */
#}

{%
    set classes = [
        'absolute',
        'peer', 
        'w-0',
        'h-0',
        'cursor-pointer',
        'opacity-0'
    ]
%}

<label class="flex items-start mt-[60px] pl-14 relative cursor-pointer select-none w-fit">
	<input{{attributes.addClass(classes)}}/>{{ children }}
	<div class="w-6 h-6 absolute text-[16px] bg-white top-0 left-0  flex items-center justify-center text-red-600 rounded-full">x</div>
</label>
