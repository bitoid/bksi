<section {{ attributes }}> 
{{ title_suffix }}
<div class=" relative bg-[#E63229] relative pt-[75px] pb-[100px] px-4 md:px-10 md:py-[150px]">

            <span class="slider-pages right-1/2 translate-x-1/2 -translate-y-1/2 absolute text-[15px] tracking-[.75px] md:right-[77px] md:top-[150px] bottom-[79px] md:bottom-full "><span class="current-slide">1</span> / <span class="total-slides">6</span></span>

            <div class="text-center  mx-auto text-fade">
                <div class="text-content-fade  max-w-[860px] mx-auto">
                <h2 class="items-center pb-[5px]  flex flex-col gap-5 headline-large">
                                <span class="headline-medium">{{ content.field_slogan_for_slide	}}</span>
                                {{content.field_title_for_slide}}
                    </h2> 
                    </div>    
                </div>   
            <div class="relative">
            <button class="slider-button-left absolute w-[50px] aspect-square bg-darkBlue rounded-full top-full left-1/2 -translate-y-1/2 -translate-x-[100px] flex justify-center items-center md:hover:w-[70px] md:left-[28px] md:top-[158px] md:-translate-x-1/2"><img class="rotate-180" src="/{{ base_path ~ directory }}/images/arrow-textlinks.svg" alt=""></button>          
                <div class="text-center  mx-auto text-fade">
                    <div class="text-content-fade max-w-[860px] mx-auto">              
                        <div class="flex items-center overflow-x-hidden slider-container flex-nowrap scroll-smooth">
                            {% for paragraph in content.field_slider %}
                             {% if paragraph['#paragraph'] %}
                            <div class="mt-[57px] slider-content w-full md:mt-[53px] flex-shrink-0 pb-[107px] md:pb-[0px]">
                                <div class=" text-[76px] leading-[100px] tracking-[3.8px] mb-[73px] font-['halbfett'] text-center md:text-[155px] md:leading-[203px] md:tracking-[7.75px] md:mb-[52px]">{{ paragraph['#paragraph'].field_year.0.value }}</div>
                                <p class="text-[20px] tracking-[1px] font-['halbfett']">{{ paragraph['#paragraph'].field_year_text_for_slider.0.value }}</p>
                            </div>
                            {% endif %}
                            {% endfor %}                    
                        </div>
                    </div>
                </div>                   
                <button class="slider-button-right absolute top-full right-1/2 -translate-y-1/2 translate-x-[100px]  w-[50px] aspect-square bg-darkBlue rounded-full flex justify-center items-center md:hover:w-[70px] md:right-[28px] md:top-[158px] md:-translate-y-1/2 md:translate-x-1/2"><img src="/{{ base_path ~ directory }}/images/arrow-textlinks.svg" alt=""></button>
          </div>
       </div>
</section>