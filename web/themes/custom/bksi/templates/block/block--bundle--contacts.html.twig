<section {{ attributes }}> 
{{ title_suffix }}
    <div class="bg-mainRed text-fade">
    <div class="text-content-fade flex flex-col items-center justify-center px-4 py-[75px] text-center md:max-w-[816px] md:mx-auto md:py-[150px]">
        <h2 class="text-[26px] tracking-[1.3px] leading-[29px] flex flex-col gap-[22px] mb-9 md:text-[35px] md:leading-[39px] md:tracking-[1.75px] md:mb-0">
            <span class="span-subline">{{ content.field_slogan[0] }}</span>
             {{ content.field_title[0]['#text'] | striptags }}
        </h2>
        <img class="w-56 mb-8" src="/{{ base_path ~ directory }}/images/bilder/arrows-navigation/arrow-kontaktmodul.svg" alt="">
        <div class="font-['halbfett'] flex flex-col text-[20px] tracking-[1px] leading-[24px] gap-[20px]">
            <a class="!font-['halbfett']" href="tel:+: {{ content.field_phone_number[0] }}">{{ 'Telefon:' | t }} {{ content.field_phone_number[0] }}</a>
            <a class="!font-['halbfett']" href="mailto:{{ content.field_email[0] }}">{{ 'E-Mail:' | t }} {{ content.field_email[0] }}</a>
        </div>
    </div>
    </div>
</section>
