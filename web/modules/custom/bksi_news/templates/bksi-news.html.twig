<section>
  <div class="flex flex-col px-4 pb-20 pt-14 bg-lightGray md:flex-row md:justify-between md:px-10 md:py-36 md:items-start">
    <div class="text-fade">
      <h2 class="text-content-fade flex flex-col gap-2 text-[26px] tracking-[0.3px] mb-14 md:text-[35px] md:leading-[41px] md:tracking-[1.75px] md:mb-0 md:self-start">
        <span class="text-[13px] leading-[15px] tracking-[0.65px] md:text-[16px] md:leading-[18px] md:tracking-[0.8px]">{{ slogan }}</span>
        {{ title }}
      </h2>
    </div>
    <div class="flex flex-col gap-8 md:gap-5 md:w-[75%] lg:w-2/3">
      {% for news in news_array %}
          <a href="{{path('entity.node.canonical', {'node': news.nid})}}" class="grid grid-cols-1 md:grid-cols-3 lg:grid-cols-5">
            <div class="relative fade-in-image-container w-full h-[25vh] md:h-[250px] md:col-span-1 lg:col-span-2 lg:h-full overflow-hidden">
              <picture>
                <source srcset="{{ news.news_image['large_webp'] }}" media="only screen and (max-width: 450px)" type="image/webp" >
                <source srcset="{{ news.news_image['large_jpg'] }}" media="only screen and (max-width: 450px)" type="image/jpeg" >
                <source srcset="{{ news.news_image['original_webp'] }}" media="only screen and (min-width: 450px)" type="image/webp">
                <source srcset="{{ news.news_image['original_jpg'] }}" media="only screen and (min-width: 450px)" type="image/jpeg">
                <img class="fade-in-image object-cover  w-full h-full" src="{{ news.news_image['original_jpg'] }}" alt="">
              </picture>
            </div>
            <div class="text-fade  p-10 bg-white md:h-[250px] md:col-span-2 lg:col-span-3">
              <div class="flex flex-col gap-5 text-content-fade">
                <h3 class="flex flex-col gap-3 text-xl leading-3">
                  <span class="text-[13px] tracking-[0.65px]">{{ news.date }} </span>
                  {{ news.title }}
                </h3>
                <p class="text-[15px] leading-[22px] tracking-[0.75px] font-['buch']">
                  {{ news.body|raw }}
                </p>
              </div>
            </div>
          </a>
      {% endfor %}
    </div>
  </div>
</section>

